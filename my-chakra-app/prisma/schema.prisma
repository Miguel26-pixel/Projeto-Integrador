generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EXPERIMENT {
  id     Int     @id @default(autoincrement())
  name   String
  image  String
  info   String
  plants PLANT[]
}

model RASPBERRYPI {
  id     Int     @id @default(autoincrement())
  piName String
  ip     String
  plants PLANT[]
}

model PLANT {
  id        Int         @id @default(autoincrement())
  plantName String
  plantdata PLANTDATA[]
  pi        RASPBERRYPI? @relation(fields: [piID], references: [id])
  piID      Int

  @@unique([id])
  experiment   EXPERIMENT? @relation(fields: [experimentID], references: [id])
  experimentID Int
}

model PLANTDATA {
  time        DateTime @id @default(now())
  temperature Float
  humidity    Float
  distance    Float
  Plant       PLANT?    @relation(fields: [plantID], references: [id])
  plantID     Int
}
